include ../button/button.pug
include ../rectangle/rectangle.pug


.section.no-header#booking
    .section__body
        .section__body__description
            h2.section__body__title book a table
            .divider
            .booking-form
                .booking-form__body
                    label(for="nameInput").hidden name
                    input(type='text' placeholder='Name').field.booking-form__input#nameInput

                    label(for="emailInput").hidden email
                    input(type='email' placeholder='Email').field.booking-form__input#emailInput
                
                    label(for="telInput").hidden phone
                    input(type='tel' placeholder='Phone').field.booking-form__input#telInput
                    
                    label(for="peopleInput").hidden people
                    select(required).select.field.booking-form__input#peopleInput
                        option.default-select(value = '0' disabled selected) People
                        option(value= '1') 1 person
                        option(value= '2') 2 people
                        option(value= '3') 3 people
                        option(value= '4') 4 people                        
                
                    label(for="dateInput").hidden date
                    input(type='text' placeholder='Date (mm/dd)' onfocus="(this.type='date')" onblur="(this.type='text')").field.booking-form__input
                    
                    label(for="timeInput").hidden time
                    select(required).select.field.booking-form__input#timeInput                        
                        option(value= '18') 18:00
                        option(value= '19') 19:00
                        option(value= '20') 20:00
                        option(value= '21') 21:00         

                +button({style:'full-btn', btnText:'book now'})            
        
        .section__body__media.section__right
            img.section__body__img(src="./img/clocks.webp", alt="fireplace")
            .section__body__rectangle.about-rectangle
                +rectangle()

    .section__footer 
        p.section__footer__text Mon - Fri: #[span.section__footer__bold 8PM - 10PM, ] Sat - Sun: #[span.section__footer__bold 8PM - 3AM, ] 
            |Phone: #[span.section__footer__bold +40 729 131 637/+40 726 458 782]