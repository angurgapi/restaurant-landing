include ../button/button.pug

.section.contact-section.no-header#contact  
    h2.section__body__title contact
    .divider
    p.section__body__text-bold.contact-text Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis at velit maximus, molestie est a, tempor magna.
    .contact-form 
        .contact-form__row 
            label(for="nameInput").hidden name
            input(type='text' placeholder='Name').field.contact-form__input#nameInput

            label(for="emailInput").hidden email
            input(type='email' placeholder='Email').field.contact-form__input#emailInput
             
            label(for="telInput").hidden phone
            input(type='tel' placeholder='Phone').field.contact-form__input#telInput
        .contact-form__message 
            label(for="msgInput").hidden message
            textarea(name="", cols="30", rows="10" type='text' placeholder='Message').field.contact-form__msg#msgInput
        .contact-form__footer 
            .contact-form__data     
                .contact-form__data__block 
                    i.fas.fa-map-marker-alt
                    p.contact-form__data__item 5th London Boulevard, U.K.
                .contact-form__data__block 
                    i.fas.fa-phone 
                    a.contact-form__data__item(href="tel:+40 729 131 637") +40 729 131 637
                    a.contact-form__data__item(href="tel:+40 726 458 782") +40 726 458 782
                .contact-form__data__block 
                    i.fas.fa-envelope 
                    a(href="mailto:office@mindblister.com").contact-form__data__item office@mindblister.com
            .contact-form__btn 
                +button({style:'full-btn', btnText:'send message'})

    .contact-map
        iframe(title="5th London Boulevard, U.K.", src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1437.2091913519232!2d-0.14640736507944466!3d51.48897450608995!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47d8a00baf21de75%3A0x52963a5addd52a99!2z0JvQvtC90LTQvtC9LCDQktC10LvQuNC60L7QsdGA0LjRgtCw0L3QuNGP!5e0!3m2!1sru!2sru!4v1614015965273!5m2!1sru!2sru",
          width="100%", height="475", style="border:0;", allowfullscreen="", loading="lazy")

